<script>
import wepy from 'wepy';
import { putGroupInfo } from "../../common/common";
import badmin from '../../common/makeGroup'
export default class AgainstTable extends wepy.page {
  props={
    groupList:{
      type:Array,
      default:[],
      twoWay:true
    },
    gameid:{
      type:String,
      default:null
    }
  }
  data={
    activedGroupIndex:null
    // matchInfo:{}
  }
  watch={
    groupList(n,o){
      console.log('grouplist changed fn in table',n,o)
      // this.$apply()
    }
  }
  
  methods={
     scoreChange(e){
      let index = e.target.dataset.id;
      let side=(e.target.dataset.side==='A'?'score_a':'score_b');
      let way=e.target.dataset.way;
      let groupInfo=this.groupList[index]
      if (way === "more") {
        groupInfo[side]++
      } else if (this.groupList[index][side]!==0){
        groupInfo[side]--
      }
      this.$apply()
    },
    selectItem(e){
      this.activedGroupIndex=e.currentTarget.dataset.id
    },
    finish(e){
      let index = e.currentTarget.dataset.id;
      let groupInfo=this.groupList[index]
      let status=(groupInfo.status===1?0:1)
      groupInfo.status=status
      let gameid=this.gameid
      let groupid=groupInfo.id
      let score_a=groupInfo.score_a
      let score_b=groupInfo.score_b
      putGroupInfo(groupid,{
        gameid:gameid,
        score_a:score_a,
        score_b:score_b,
        status:status})  
      // let res=await downloadMatchInfo(this.matchInfo.id)
      // if(res){
      //   this.matchInfo=res
      //   wx.setStorageSync('activeMatchInfo',this.matchInfo)
      // }
    }
  }
}
</script>