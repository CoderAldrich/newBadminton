
<template>
  <view class="warp"> 
  <repeat for="{{groupList}}" key="index" index="index" item="item" if="{{state===1}}">
    <view class="againstTable">
    <view class="againstItem {{item.status===1?'done':'undone'}} {{activedGroupIndex===index?'selected':''}}" @tap.stop='selectItem' data-id="{{index}}">
      <view class="side">
        <view class="name">{{item.id_a1.real_name||item.id_a1.nick_name}}</view>
        <view class="name">{{item.id_a2.real_name||item.id_a2.nick_name}}</view>
      </view>
      <!-- <view class="score"> -->
      <view class="handleBtnGroup">
        <button @tap='scoreChange' data-id="{{index}}" data-side="A" data-way="more"  hover-class="hover">+</button>
        <button @tap='scoreChange' data-id="{{index}}" data-side="A" data-way="less"  hover-class="hover">-</button>
      </view>
      <view class="score scoreL">{{item.score_a}}</view>
      <view class="sub" bindtap="finish" data-id="{{index}}">
        <view>第{{index+1}}场</view>
        <view wx:if="{{item.status!==1}}"  class="finishBtn">结束比赛</view> 
        <view wx:else  class="finishBtn">查看比赛</view>
      </view>
      <view class="score scoreR">{{item.score_b}}</view>
      <view class="handleBtnGroup">
        <button @tap='scoreChange' data-id="{{index}}" data-side="B" data-way="more" hover-class="hover">+</button>
        <button @tap='scoreChange' data-id="{{index}}" data-side="B" data-way="less"  hover-class="hover">-</button>
      </view>
      <!-- </view> -->
      <view class="side">
        <view class="name">{{item.id_b1.real_name||item.id_b1.nick_name}}</view>
        <view class="name">{{item.id_b2.real_name||item.id_b2.nick_name}}</view>
      </view>
    </view>
  </view>
  </repeat>
  <view class="err" if="{{state!==1}}">{{msg[state]}}</view>
  </view>
</template>

